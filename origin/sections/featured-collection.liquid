
{% comment %} <link rel="stylesheet" href="{{ 'section-featured-collection.css' | asset_url }}" media="print" onload="this.media='all'"> {% endcomment %}

{% style %}
/*------------------------------------*\
    #Featured Collection
\*------------------------------------*/

.featured-collection-section {
    background-color: rgb(var(--color-base-background-2));
    margin-bottom: 0;
    padding-bottom: var(--level7);
}

@media screen and (min-width: 930px) {
    .featured-collection-section {
        padding-bottom: var(--level10);
    }
}

.featured-collection-section__inner {
    padding-left: var(--level7);
    padding-right: var(--level7);
    padding-top: var(--level8);
}

@media screen and (min-width: 930px) {
    .featured-collection-section__inner {
        padding-top: calc(var(--level10) + var(--level2));
    }
}

.featured-collection-section__copy {
    text-align: center;
}

.featured-collection-section__copy__heading {
    font-family: var(--tertiary-font-family);
    font-size: var(--h3);
    max-width: 21rem;
    margin-bottom: var(--level7);
    margin-right: auto;
    margin-left: auto;
}

@media screen and (min-width: 930px) {
    .featured-collection-section__copy__heading {
        max-width: 100%;
        margin-bottom: var(--level9);
        font-size: var(--h2);
    }
}

.featured-collection-section__copy__body {
    font-size: var(--normal);
    max-width: 29rem;
    margin-bottom: var(--level6);
    margin-right: auto;
    margin-left: auto;
}


@media screen and (min-width: 700px) {
    .featured-collection-section__copy__body {
        max-width: 31rem;
    }
}

@media screen and (min-width: 930px) {
    .featured-collection-section__copy__body {
        max-width: 60rem;
        margin-bottom: var(--level10);
        font-size: var(--h5);
    }
}


.featured-collection-section__copy__cta {
    margin-bottom: var(--level7);
}

@media screen and (min-width: 700px) {
    .featured-collection-section__copy__cta {
        margin-bottom: var(--level7);
    }
}


@media screen and (min-width: 930px) {
    .featured-collection-section__copy__cta {
        margin-bottom: var(--level10);
    }
}

.featured-collection-section__copy__cta a {
    font-size: var(--h5);
}

@media screen and (min-width: 930px) {
    .featured-collection-section__copy__cta a {
        font-size: var(--h4);
    }
}


.featured-collection-section__images {
    width: 100%;
    display: grid;
    max-width: 21rem;
    margin-right: auto;
    margin-left: auto;
}

@media screen and (min-width: 700px) {
    .featured-collection-section__images {
        display: grid;
        max-width: 100%;
        grid-template-columns: 1fr 1fr 1fr;
        column-gap: var(--level4);
        max-width: 67rem;
    }
}

@media screen and (min-width: 930px) {
    .featured-collection-section__images {
        column-gap: var(--level7);
        max-width: 97rem;
    }
}


.featured-collection-section__images__image {
    position: relative;
    padding-bottom: 140%;
    background-color: rgb(var(--color-base-background-3));
}


@media screen and (min-width: 700px) {
    .featured-collection-section__images__image {
        padding-bottom: 155%;
    }
}

.featured-collection-section__images .featured-collection-section__images__image-container:first-child {
    display: none;
}

@media screen and (min-width: 700px) {
    .featured-collection-section__images .featured-collection-section__images__image-container:first-child {
        display: block;
    }
}

.featured-collection-section__images .featured-collection-section__images__image-container:last-child {
    display: none;
}

@media screen and (min-width: 700px) {
    .featured-collection-section__images .featured-collection-section__images__image-container:last-child {
        display: block;
    }
}

.featured-collection-section__images__image img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
}
{% endstyle %}

<section class="featured-collection-section {% if section.settings.top_border == 'yes' %}has-top-border{% endif %} {% if section.settings.bottom_border == 'yes' %}has-bottom-border{% endif %}">
  <div class="featured-collection-section__inner page-width">

    <div class="featured-collection-section__copy">
      <h2 class="featured-collection-section__copy__heading">
          {{ section.settings.heading }}
      </h2>
      <div class="featured-collection-section__copy__body">
          {{ section.settings.body }}
      </div>
      <div class="featured-collection-section__copy__cta">
        <a href="{{ section.settings.cta-url }}" rel="internal" title="View the {{ section.settings.heading }} page" class="styled-link">
          View Collection
        </a>
      </div>

    </div>

    <div class="featured-collection-section__images">
      {% for block in section.blocks %}
        <div class="featured-collection-section__images__image-container">
          <div class="featured-collection-section__images__image">
            <img
              srcset="{%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                {%- if block.settings.image.width >= 533 -%}{{ block.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
                {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                {%- if block.settings.image.width >= 800 -%}{{ block.settings.image | image_url: width: 800 }} 800w,{%- endif -%}
                {%- if block.settings.image.width >= 940 -%}{{ block.settings.image | image_url: width: 940 }} 940w,{%- endif -%}
                {%- if block.settings.image.width >= 1066 -%}{{ block.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
              src="{{ block.settings.image | image_url: width: 533 }}"
              sizes="(min-width: 700px) 30vw, 90vw"
              alt="{{ block.settings.image.alt | escape }}"
              class="motion-reduce"
              aria-hidden="true"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "templates": [
    "index",
    "page"
  ],
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Section Body"
    },
    {
      "type": "url",
      "id": "cta-url",
      "label": "Collection Page"
    },
    {
      "type": "header",
      "content": "Border Elements"
    },
    {
      "type": "radio",
      "id": "top_border",
      "label": "Top Border",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "no"
    },
    {
      "type": "radio",
      "id": "bottom_border",
      "label": "Bottom Border",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "yes"
    }
  ],
  "blocks": [
    {
      "type": "collection_image",
      "name": "Collection Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Collection Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
