{{ 'section-about-header.css' | asset_url | stylesheet_tag }}

<section class="about-header  {% if section.settings.top_border == 'yes' %}has-top-border{% endif %} {% if section.settings.bottom_border == 'yes' %}has-bottom-border{% endif %}">
    <div class="about-header__inner">
      <div class="about-header__image-container">
          <div class="about-header__image">
              <img
                  srcset="{%- if section.settings.right-image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.right-image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.right-image.width >= 533 -%}{{ section.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if section.settings.right-image.width >= 720 -%}{{ section.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                  {%- if section.settings.right-image.width >= 940 -%}{{ section.settings.image | image_url: width: 940 }} 940w,{%- endif -%}
                  {%- if section.settings.right-image.width >= 1066 -%}{{ section.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                  {{ section.settings.image | image_url }} {{ section.settings.right-image.width }}w"
                  src="{{ section.settings.image | image_url: width: 533 }}"
                  sizes="(min-width: 700px) 50vw, 100vw"
                  alt="{{ section.settings.right-image.alt | escape }}"
                  class="motion-reduce"
                  loading="lazy"
                  width="{{ section.settings.right-image.width }}"
                  height="{{ section.settings.right-image.height }}"
              >
          </div>
      </div>
      <div class="about-header__copy">
          <div class="about-header__copy__inner">
              <h2 class="about-header__copy__heading">
                  {{ section.settings.heading }}
              </h2>
              
              <div class="about-header__copy__body">
                  {{ section.settings.body }}
              </div>
          </div>
      </div>    
  </div>
</section>

{% schema %}
{
  "name": "About Header",
  "templates": [
    "page"
  ],
  "settings": [
    {
      "type": "header",
      "content": "Copy"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Section Body"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Header Image"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "radio",
      "id": "section-alignment",
      "label": "Section Order on Desktop",
      "options": [
        {
          "value": "normal",
          "label": "Image on Left"
        },
        {
          "value": "flipped",
          "label": "Image on Right"
        }
      ],
      "default": "normal"
    },
    {
      "type": "radio",
      "id": "top_border",
      "label": "Top Border",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "no"
    },
    {
      "type": "radio",
      "id": "bottom_border",
      "label": "Bottom Border",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "yes"
    }
  ],
  "presets": [
    {
      "name": "About Header"
    }
  ]
}
{% endschema %}
