
<link rel="stylesheet" href="{{ 'instagram-feed.css' | asset_url }}" media="print" onload="this.media='all'"> 
<script type="module" src="{{ 'instagram-feed.js' | asset_url }}" defer="defer"></script> 

<instagram-feed class="instagram-feed__inner" >
    <div class="instagram-feed__header">
        <h2 class="instagram-feed__heading">
            {{ section.settings.heading }}    
        </h2>
    </div>

    <ul id="instafeed" data-script-url="{{ 'instafeed.min.js' | asset_url }}"  class="instagram-feed__posts">
        <li class="instagram-feed__post">
            <span class="instagram-feed__post__inner">
            </span>
        </li>
        <li class="instagram-feed__post">
            <span class="instagram-feed__post__inner">
            </span>
        </li>
        <li class="instagram-feed__post">
            <span class="instagram-feed__post__inner">
            </span>
        </li>
        <li class="instagram-feed__post">
            <span class="instagram-feed__post__inner">
            </span>
        </li>
        <li class="instagram-feed__post">
            <span class="instagram-feed__post__inner">
            </span>
        </li>
    </ul>
</instagram-feed>


{% schema %}
{
  "name": "Instagram Feed",
  "tag": "section",
  "class": "instagram-feed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "templates": [
    "index",
    "page"
  ],
  "presets": [
    {
      "name": "Instagram Feed"
    }
  ]
}
{% endschema %}
