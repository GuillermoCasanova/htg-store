

<link rel="stylesheet" href="{{ 'lookbook-image-copy.css' | asset_url }}" media="print" onload="this.media='all'">

<section class="lookbook-image-copy" style="
    {% if section.settings.bg_color == 'background-1' %}
        background-color: rgb(var(--color-base-background-1));
    {% endif %}
    {% if section.settings.bg_color == 'background-2' %}
        background-color: rgb(var(--color-base-background-2));
    {% endif %}
    {% if section.settings.bg_color == 'background-3' %}
        background-color: rgb(var(--color-base-background-3));
    {% endif %}
    ">
    <div class="lookbook-image-copy__inner" >

    <div class="lookbook-image-copy__image-container">
            <div class="lookbook-image-copy__image">
                <img
                    srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if section.settings.image.width >= 533 -%}{{ section.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if section.settings.image.width >= 940 -%}{{ section.settings.image | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if section.settings.image.width >= 1066 -%}{{ section.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {%- if section.settings.image.width >= 1600 -%}{{ section.settings.image | image_url: width: 1600 }} 1600w,{%- endif -%}
                    {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
                    src="{{ section.settings.image | image_url: width: 533 }}"
                    sizes="(min-width: 1600px) 48vw, (min-width: 930px) calc(50vw  - 8rem), (min-width: 700px) calc(50vw  - 6rem), 30rem"
                    alt="{{ section.settings.image.alt | escape }}"
                    class="motion-reduce"
                    loading="lazy"
                    width="{{ section.settings.image.width }}"
                    height="{{ section.settings.image.height }}"
                >
            </div>
        </div>
        
        <div class="lookbook-image-copy__copy">
            <div class="lookbook-image-copy__copy__inner">
                <h2 class="lookbook-image-copy__heading">
                    {{ section.settings.heading }}
                </h2>
                <div class="lookbook-image-copy__body">
                    {{ section.settings.body }}
                </div>
            </div>
        </div>

    </div>
</section>


{% schema %}
{
  "name": "Lookbook Image + Copy",
  "templates": [
    "page"
  ],
  "settings": [
    {
      "type": "text",
      "label": "Section Heading",
      "id": "heading"
    },
    {
      "type": "richtext",
      "label": "Section Body",
      "id": "body"
    },
    {
      "type": "select",
      "id": "bg_color",
      "label": "Copy Background Color",
      "info": "Pulled from Theme Settings > Background Colors",
      "options": [
        {
          "value": "background-1",
          "label": "Bakground 1"
        },
        {
          "value": "background-2",
          "label": "Bakground 2"
        },
        {
          "value": "background-3",
          "label": "Bakground 3"
        }
      ],
      "default": "background-2"
    },
    {
      "type": "image_picker",
      "label": "Image",
      "id": "image"
    }
  ],
  "presets": [
    {
      "name": "Lookbook Image + Copy"
    }
  ]
}
{% endschema %}