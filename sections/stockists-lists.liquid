
{% style %}
    .stockists-lists {
        text-align: center;
        display: grid;
        width: 100%;
        max-width: 70rem;
        margin-right: auto; 
        margin-left: auto; 
    }

    @media only screen and (min-width: 600px) {
      .stockists-lists {
        grid-template-columns: 1fr 1fr;
        text-align: left;
      }
    }


    .stockist-list {
      width: 100%; 
    }

    .stockist-list h2 {
      font-family: var(--tertiary-font-family);
      font-size: var(--h4);
      margin-bottom: var(--level6);
    }


    @media only screen and (min-width: 600px) {
      .stockist-list h2 {
        font-size: var(--h3);
      }
    }


    .stockist-list ul {
      margin-bottom: var(--level10);
    }

    .stockist-list li {
      margin-bottom: var(--level2);
      font-size: var(--normal);
    }

    @media only screen and (min-width: 600px) {
      .stockist-list li {
        font-size: var(--h6);
      }
    }

{% endstyle %}

<div class="stockists-lists">
  {% for block in section.blocks %}
  <div class="stockist-list">
    <h2>
      {{ block.settings.country_region }}
    </h2>
    <ul>
        {{ block.settings.store_list }}
    </ul>
  </div>
  {% endfor %}
</div>


{% schema %}
{
  "name": "Stockists Lists",
  "tag": "section",
  "class": "stockists-list page-width",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.page.settings.page.label"
    }
  ],
  "blocks": [
    {
      "type": "stockist-list",
      "name": "Stockist List",
      "settings": [
        {
          "type": "text",
          "id": "country_region",
          "label": "Countru or region"
        },
        {
          "type": "html",
          "id": "store_list",
          "label": "List of stores",
          "info": "List of stores, eachs store must be wrapped in a <li></li> tags to represent a list."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stockists Lists"
    }
  ]
}
{% endschema %}
