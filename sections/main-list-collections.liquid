{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}

<div class="page-width archival-collections__inner">
  <ul class="collection-list grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" role="list">
    {% for block in section.blocks %}
      <li>
        <div class="archival-collection-thumb">
          <div class="archival-collection-thumb__image-container">
            <div class="archival-collection-thumb__image">
              <img
                srcset="{%- if block.settings.thumbnail.width >= 165 -%}{{ image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if block.settings.thumbnail.width >= 360 -%}{{ image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if block.settings.thumbnail.width >= 533 -%}{{ image | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if block.settings.thumbnail.width >= 720 -%}{{ image | image_url: width: 720 }} 720w,{%- endif -%}
                  {%- if block.settings.thumbnail.width >= 940 -%}{{ image | image_url: width: 940 }} 940w,{%- endif -%}
                  {{ image | image_url }} {{ block.settings.thumbnail.width }}w"
                src="{{ image | image_url: width: 533 }}"
                sizes="(min-width: 930px) 30vw, 50vw"
                alt="{{ block.settings.thumbnail.alt | escape }}"
                class="motion-reduce"
                aria-hidden="true"
                loading="lazy"
                width="{{ block.settings.thumbnail.width }}"
                height="{{ block.settings.thumbnail.height }}"
              >
            </div>
          </div>
          <div class="archival-collection-thumb__name">
            <a href="{{ block.settings.lookbook_url }}" rel="internal">
            View Collection
            </a>
        </div>
      </div>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "t:sections.main-list-collections.name",
  "class": "section archival-collections",
  "tag": "section",
  "templates": [
    "list-collections"
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.main-list-collections.settings.title.label",
      "default": "Collections"
    }
  ],
  "blocks": [
    {
      "type": "archival-collection",
      "name": "Archival Collection",
      "settings": [
        {
          "type": "text",
          "id": "collection_name",
          "label": "Collection Name",
          "info": "The customer facing name for this collection."
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail"
        },
        {
          "type": "url",
          "id": "lookbook_url",
          "label": "Lookbook URL"
        }
      ]
    }
  ]
}
{% endschema %}
