{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}

<div class="page-width archival-collections__inner">
  <ul class="collection-list grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" role="list">
    {% for block in section.blocks %}
      <li>
        <div class="archival-collections__collection-thumb">
          <img src="{{ block.settings.thumbnail }}" alt="{{ block.settings.collection_name }}" loading="lazy">
          <a href="{{ block.settings.lookbook_url }}" rel="internal">
          View Collection
          </a>
      </div>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "t:sections.main-list-collections.name",
  "class": "section archival-collections",
  "tag": "section",
  "templates": [
    "list-collections"
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.main-list-collections.settings.title.label",
      "default": "Collections"
    }
  ],
  "blocks": [
    {
      "type": "archival-collection",
      "name": "Archival Collection",
      "settings": [
        {
          "type": "text",
          "id": "collection_name",
          "label": "Collection Name",
          "info": "The customer facing name for this collection."
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail"
        },
        {
          "type": "url",
          "id": "lookbook_url",
          "label": "Lookbook URL"
        }
      ]
    }
  ]
}
{% endschema %}
